<?xml version="1.0" encoding="utf-8"?>
<!--卡片布局-->
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/notification_card"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp">
    <!--通知布局-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/notification_title_text"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="科研立项开始了"
                android:maxLines="2"
                android:layout_margin="8dp"
                />
            <ImageButton
                android:background="#ffffff"
                android:layout_marginRight="4dp"
                android:id="@+id/notification_menu_choose"
                android:src="@drawable/notification_menu_choose"
                android:layout_width="35dp"
                android:layout_alignParentRight="true"
                android:layout_height="35dp"

                android:scaleType="centerInside"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:textColor="#000000"
            />
        <!--通知信息-->
        <RelativeLayout

            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentRight="true"
            android:id="@+id/notification_author_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="发布者：董喆"
            android:textColor="#6e6868"/>
            <TextView
              android:layout_marginLeft="12dp"
                android:id="@+id/notification_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="时间：2018/3/12"
                android:textColor="#6e6868"/>

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
