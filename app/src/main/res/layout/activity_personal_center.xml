<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!--不可变标题栏-->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/personal_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/personal_toolbar"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="个人中心"
                android:textSize="24dp"
                android:textColor="#ffffff"
               android:gravity="center"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <!--头像修改栏-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/personal_image_circle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@drawable/moren_image_2"/>
            <Button
                android:id="@+id/personal_choose_photo"
                android:background="@drawable/button_style"
                android:enabled="false"
                android:text="选择图片...."
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
            <!--用户名-->
            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style"
                    android:text="用户名:"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#501414"/>
                <TextView
                    android:id="@+id/edit_personal_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:hint="201600800456"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/edittext_style"
                    />
            </LinearLayout>
            <!--班级号-->
            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style"
                    android:text="班级号:"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#501414"/>
                <TextView
                    android:id="@+id/edit_personal_Class_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:hint="2016008007435"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/edittext_style"
                    />
            </LinearLayout>
            <!--姓名-->
            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style"
                    android:text="姓    名:"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#501414"/>
                <EditText
                    android:enabled="false"
                    android:id="@+id/edit_personal_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:hint="董喆"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/edittext_style"
                    />
            </LinearLayout>
            <!--性别-->
            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style"
                    android:text="性    别:"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#501414"/>
                <Spinner
                    android:enabled="false"
                    android:id="@+id/sp_personal_sex"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:entries="@array/sex"
                    android:textColor="#000000"

                    android:background="@drawable/edittext_style"
                    />
            </LinearLayout>
            <!--地址-->
            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style"
                    android:text="地    址:"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#501414"/>
                <TextView
                    android:enabled="false"
                    android:id="@+id/sp_personal_address"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:hint="山东省淄博市淄川区"
                    android:background="@drawable/edittext_style"
                    />
            </LinearLayout>
            <!--生日-->
            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style"
                    android:text="生    日:"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#501414"/>
                <EditText
                android:id="@+id/sp_personal_year"
                android:layout_width="80dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="#000000"
                android:hint="1997"
                android:enabled="false"
                android:inputType="number"
                android:background="@drawable/edittext_style"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年"
                    android:textColor="#000000"/>
                <EditText
                    android:layout_marginLeft="20dp"
                    android:id="@+id/sp_personal_month"
                    android:layout_width="wrap_content"
                    android:enabled="false"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:hint="9"
                    android:inputType="number"
                    android:background="@drawable/edittext_style"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月"
                    android:textColor="#000000"/>
                <EditText
                    android:layout_marginLeft="20dp"
                    android:id="@+id/sp_personal_day"
                    android:enabled="false"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:hint="16"
                    android:inputType="number"
                    android:background="@drawable/edittext_style"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日"
                    android:textColor="#000000"/>
            </LinearLayout>
            <!--phone-->
            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style"
                    android:text="电    话:"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#501414"/>
                <EditText
                    android:id="@+id/sp_personal_phone"
                    android:layout_width="match_parent"
                    android:enabled="false"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:hint="15650111502"
                    android:background="@drawable/edittext_style"
                    />
            </LinearLayout>
            <!--QQ-->
            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style"
                    android:text="QQ      :"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#501414"/>
                <EditText
                    android:id="@+id/edit_personal_QQ"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:hint="1097300052"
                    android:enabled="false"
                    android:background="@drawable/edittext_style"
                    />
            </LinearLayout>
            <GridLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="7">
                <Button
                    android:id="@+id/personal_edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style_2"
                    android:layout_gravity="center"
                    android:text="编辑"
                    android:layout_columnSpan="1"
                    android:layout_column="1"
                    android:layout_rowSpan="1"
                    android:layout_columnWeight="1"
                    />
                <Button
                    android:id="@+id/personal_save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style_2"
                    android:layout_gravity="center"
                    android:text="保存"

                    android:layout_columnSpan="1"
                    android:layout_column="4"
                    android:layout_rowSpan="1"
                    android:enabled="false"
                    android:layout_columnWeight="1"
                    />
            </GridLayout>

        </LinearLayout>




    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
