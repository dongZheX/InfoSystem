<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.dongzhex.someactivities.infosystem.ResetPassword">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/reset_pass_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout

        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!--原密码-->
        <LinearLayout
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_style"
                android:text="原密码:"
                android:textSize="18dp"
                android:textColor="#000000"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#501414"/>
            <EditText
                android:id="@+id/old_pass_edit"
                android:inputType="textPassword"
                android:background="@drawable/edittext_style"
                android:layout_width="250dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <!--现在密码-->
        <LinearLayout
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_style"
                android:text="新密码:"
                android:textSize="18dp"
                android:textColor="#000000"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#501414"/>
            <EditText
                android:id="@+id/new_pass_edit"
                android:background="@drawable/edittext_style"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:inputType="textPassword"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_resetPass"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_gravity="center"
            android:background="@drawable/button_style_3"/>
    </LinearLayout>

</LinearLayout>
