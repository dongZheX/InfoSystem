<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
   >
    <!--ToolBar标题栏-->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/perfect_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完善信息"
                android:textSize="21dp"
                android:textColor="#FFFF"
                android:layout_marginLeft="148dp"
                android:gravity="center_vertical"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <!--头像-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="22dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/perfect_photo"
        android:layout_gravity="center"
        app:civ_border_overlay="false"
        app:civ_border_width="2dp"
        android:src="@drawable/system_zzz_add"
        android:layout_marginBottom="6dp"
        />
    <Button
        android:id="@+id/perfect_button_photo"
        android:layout_height="30dp"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:text="请选择图片..."
        android:background="#decccc"
        android:shadowRadius="20dp"
        />

    <!--各项完善项目-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <!--姓名-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名:"
                android:textColor="#000000"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/perfect_name"
                android:padding="12dp"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:hint="请输入您的中文名:"/>
        </LinearLayout>
        <!--性别-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别 :"
                android:textColor="#000000"
                android:textSize="18dp"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioButton
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/radio_button_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textSize="20dp"/>
                <RadioButton
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/radio_button_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textSize="20dp"/>
            </RadioGroup>
        </LinearLayout>
        <!--联系方式-->
        <LinearLayout
            android:layout_width=""
            android:layout_height=""></LinearLayout>
    </LinearLayout>
</LinearLayout>
